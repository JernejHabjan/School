/*==============================================================*/
/* Table: Flight                                                */
/*==============================================================*/
create table Flight (
   flightID             int                  not null,
   locationID           int                  not null,
   planeID              int                  not null,
   Loc_locationID       int                  not null,
   date                 datetime             not null,
   discount             float                null,
   constraint PK_FLIGHT primary key (flightID)
)
go

/*==============================================================*/
/* Index: from_FK                                               */
/*==============================================================*/




create nonclustered index from_FK on Flight (locationID ASC)
go

/*==============================================================*/
/* Index: airplane_used_FK                                      */
/*==============================================================*/




create nonclustered index airplane_used_FK on Flight (planeID ASC)
go

/*==============================================================*/
/* Index: to_FK                                                 */
/*==============================================================*/




create nonclustered index to_FK on Flight (Loc_locationID ASC)
go

/*==============================================================*/
/* Table: Location                                              */
/*==============================================================*/
create table Location (
   locationID           int                  not null,
   name                 varchar(150)         not null,
   constraint PK_LOCATION primary key (locationID)
)
go

/*==============================================================*/
/* Table: "Order"                                               */
/*==============================================================*/
create table "Order" (
   orderID              int                  not null,
   userID               int                  not null,
   flightID             int                  not null,
   Fli_flightID         int                  null,
   constraint PK_ORDER primary key (orderID)
)
go

/*==============================================================*/
/* Index: user_ordering_FK                                      */
/*==============================================================*/




create nonclustered index user_ordering_FK on "Order" (userID ASC)
go

/*==============================================================*/
/* Index: initial_flight_FK                                     */
/*==============================================================*/




create nonclustered index initial_flight_FK on "Order" (flightID ASC)
go

/*==============================================================*/
/* Index: return_flight_FK                                      */
/*==============================================================*/




create nonclustered index return_flight_FK on "Order" (Fli_flightID ASC)
go

/*==============================================================*/
/* Table: Passenger                                             */
/*==============================================================*/
create table Passenger (
   passengerID          int                  not null,
   name                 varchar(150)         null,
   surname              varchar(50)          null,
   gender               varchar(10)          null,
   age                  int                  null,
   constraint PK_PASSENGER primary key (passengerID)
)
go

/*==============================================================*/
/* Table: Plane                                                 */
/*==============================================================*/
create table Plane (
   planeID              int                  not null,
   name                 varchar(150)         not null,
   seats                int                  not null,
   company              varchar(50)          not null,
   price                float                not null,
   constraint PK_PLANE primary key (planeID)
)
go

/*==============================================================*/
/* Table: Role                                                  */
/*==============================================================*/
create table Role (
   roleID               int                  not null,
   description          varchar(30)          null,
   constraint PK_ROLE primary key (roleID)
)
go

/*==============================================================*/
/* Table: "User"                                                */
/*==============================================================*/
create table "User" (
   userID               int                  not null,
   roleID               int                  not null,
   googleID             varchar(30)          not null,
   name                 varchar(150)         not null,
   email                varchar(255)         not null,
   gender               varchar(10)          null,
   constraint PK_USER primary key (userID)
)
go

/*==============================================================*/
/* Index: user_role_FK                                          */
/*==============================================================*/




create nonclustered index user_role_FK on "User" (roleID ASC)
go

/*==============================================================*/
/* Table: passengers                                            */
/*==============================================================*/
create table passengers (
   orderID              int                  not null,
   passengerID          int                  not null,
   constraint PK_PASSENGERS primary key (orderID, passengerID)
)
go

/*==============================================================*/
/* Index: passengers2_FK                                        */
/*==============================================================*/




create nonclustered index passengers2_FK on passengers (passengerID ASC)
go

/*==============================================================*/
/* Index: passengers_FK                                         */
/*==============================================================*/




create nonclustered index passengers_FK on passengers (orderID ASC)
go

alter table Flight
   add constraint FK_FLIGHT_AIRPLANE__PLANE foreign key (planeID)
      references Plane (planeID)
go

alter table Flight
   add constraint FK_FLIGHT_FROM_LOCATION foreign key (locationID)
      references Location (locationID)
go

alter table Flight
   add constraint FK_FLIGHT_TO_LOCATION foreign key (Loc_locationID)
      references Location (locationID)
go

alter table "Order"
   add constraint FK_ORDER_INITIAL_F_FLIGHT foreign key (flightID)
      references Flight (flightID)
go

alter table "Order"
   add constraint FK_ORDER_RETURN_FL_FLIGHT foreign key (Fli_flightID)
      references Flight (flightID)
go

alter table "Order"
   add constraint FK_ORDER_USER_ORDE_USER foreign key (userID)
      references "User" (userID)
go

alter table "User"
   add constraint FK_USER_USER_ROLE_ROLE foreign key (roleID)
      references Role (roleID)
go

alter table passengers
   add constraint FK_PASSENGE_PASSENGER_ORDER foreign key (orderID)
      references "Order" (orderID)
go

alter table passengers
   add constraint FK_PASSENGE_PASSENGER_PASSENGE foreign key (passengerID)
      references Passenger (passengerID)
go

