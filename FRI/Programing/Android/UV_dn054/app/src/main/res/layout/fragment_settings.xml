<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/relative_settings"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="si.roglan.uv_dn05.SettingsFragment">

    <!-- TODO: Update blank fragment layout -->

    <TextView
        android:id="@+id/oznaka_teze"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="26dp"
        android:layout_marginTop="90dp"
        android:text="@string/oznaka_teze" />


    <RadioGroup xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/rGroup_teza"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/oznaka_teze"
        android:layout_marginEnd="36dp"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/rad_kg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="true"
            android:text="@string/kilogrami" />

        <RadioButton
            android:id="@+id/rad_Pounds"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="18dp"
            android:text="@string/pound" />
    </RadioGroup>


    <TextView
        android:id="@+id/oznaka_visine"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/oznaka_teze"
        android:layout_below="@+id/rGroup_teza"
        android:layout_marginTop="38dp"
        android:text="Format datuma" />

    <RadioGroup xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/rGroup_visina"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/rGroup_teza"
        android:layout_alignTop="@+id/oznaka_visine"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/radioButton7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="true"
            android:text="d.m.yyyy" />

        <RadioButton
            android:id="@+id/radioButton8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="18dp"
            android:text="d-m-yyyy" />
    </RadioGroup>
</RelativeLayout>
